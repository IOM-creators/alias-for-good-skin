{% if section.settings.background_color != blank %}
  <style>
    #shopify-section-{{ section.id }} .page-width {
      background-color: {{ section.settings.background_color }};
    }
  </style>
{% endif %}

<div class="distance" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <div class="page-width{% if section.settings.class %} {{ section.settings.class }}{% endif %}">
    {% if section.settings.has_fullwidth == false %}
      <div class="container_90">
    {% endif %}
      <div class="block_customs">
        <div class="custom-content row">
          {% for block in section.blocks %}
            <div class="custom__item {{ block.settings.width }} {{ block.settings.width_lg }} {{ block.settings.width_md }}{% if block.settings.class != blank %} {{ block.settings.class }}{% endif %}" style="padding-top: {{ section.settings.distance_top }};padding-bottom: {{ section.settings.distance_bottom }};">
              {% case block.type %}
                {% when 'text' %}
                  <div class="block_text {{ block.settings.alignment }}">
                    {% if block.settings.title != blank %}
                      <div class="title" style="{% if block.settings.color_title != blank %}color: {{ block.settings.color_title }};{% endif %}">{{ block.settings.title | nofilter }}</div>
                    {% endif %}
                    {% if block.settings.sub != blank %}
                      <div class="subtitle" style="{% if block.settings.color_sub != blank %}color: {{ block.settings.color_sub }};{% endif %}">{{ block.settings.sub | nofilter }}</div>
                    {% endif %}
                    {% if block.settings.show_button %}
                      <div class="button_label d-inline-flex justify-content-center">
                        <a href="{{ block.settings.button_link }}" class="hover_x d-flex align-items-center justify-content-center">
                          <span>{{ block.settings.button_label | nofilter }}</span>
                          <i class="zmdi zmdi-long-arrow-right"></i>
                        </a>
                      </div>
                    {% endif %}
                    {% if block.settings.show_social == true %}
                      <div class="social text-center">
                        {% include 'nov-social' %}
                      </div>
                    {% endif %}
                  </div>
                {% when 'newsletter' %}
                  <div class="block_newsletter">
                    <div class="block_title {{ block.settings.alignment }}">
                      {% if block.settings.title != blank %}
                        <div class="title" style="{% if block.settings.color_title != blank %}color: {{ block.settings.color_title }};{% endif %}">{{ block.settings.title | nofilter }}</div>
                      {% endif %}
                      {% if block.settings.sub != blank %}
                        <div class="subtitle" style="{% if block.settings.color_sub != blank %}color: {{ block.settings.color_sub }};{% endif %}">{{ block.settings.sub | nofilter }}"</div>
                      {% endif %}
                    </div>
                    <div class="block_form">
                      {% form 'customer' %}
                        {{ form.errors | default_errors }}
                        {% if form.posted_successfully? %}
                          <p class="form--success text-center" style="color: #000;">{{ 'general.newsletter_form.confirmation' | t }}</p>
                        {% else %}
                          <div class="input-group">
                            <input type="hidden" name="contact[tags]" value="newsletter">
                            <input type="email"
                              name="contact[email]"
                              id="Email_newsletter"
                              class="input-group__field newsletter__input"
                              value="{% if customer %}{{ customer.email }}{% endif %}"
                              placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}">
                            <button type="submit" class="newsletter__submit" name="commit" id="Subscribe_newsletter">
                              {{ 'general.newsletter_form.submit_form' | t }}
                            </button>
                          </div>
                        {% endif %}
                      {% endform %}
                    </div>
                  </div>
              {% endcase %}
            </div>
          {% endfor %}
        </div>
      </div>
      {% if section.blocks.size == 0 %}
        {% include 'no-blocks' %}
      {% endif %}
    {% if section.settings.has_fullwidth == false %}
      </div>
    {% endif %}
  </div>
</div>
