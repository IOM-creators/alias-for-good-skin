{%- assign logo_tabbar = section.settings.logo_tabbar -%}
<div data-section-id="{{ section.id }}" data-section-type="header-section">
  <header
    class="site-header {% if section.settings.stickymenu == true %}sticky-menu{% endif %}"
    {% if section.settings.background_color != blank and template.name == 'index' %}
      style="background-color: {{ section.settings.background_color }};"
    {% endif -%}
    {% if section.settings.background_color_inner != blank and template.name != 'index' %}
      style="background-color: {{ section.settings.background_color_inner }};"
    {% endif %}
  >
    {% if section.settings.social or section.blocks.size > 0 %}
      <div class="header-top" style="background-color: {{ section.settings.announcement_bg }}">
        <div class="container_90">
          <div class="row align-items-center">
            {% if section.settings.social %}
              <div class="col-md-3 d-none d-md-block cbc">{% include 'nov-social' %}</div>
            {% endif %}
            <div class="{% if section.settings.social %}col-lg-6 col-md-9{% else %}col-12{% endif %}">
              {% if section.blocks.size > 0 %}
                <div class="announcement-slider text-center text-md-right text-lg-center pt-15 pb-15">
                  {% for block in section.blocks %}
                    {% if block.settings.announcement_text != blank %}
                      <div class="announcement-slide" style="color: {{ block.settings.announcement_text_color}};">
                        {{ block.settings.announcement_text }}
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>

      <script type="text/javascript">
        jQuery(document).ready(function($) {
          $('.announcement-slider').slick({
            dots: false,
            infinite: true,
            speed: 300,
            slidesToShow: 1,
            autoplay: true,
            autoplaySpeed: 5000,
            adaptiveHeight: true
          });
        });
      </script>
    {% endif %}

    <div class="header-mobile d-md-none" style="background-color: {{ section.settings.background_color_mobile }};">
      <div class="d-flex align-items-center">
        <div class="mobile_logo text-center">
          {% if section.settings.logo_mobile %}
            <a href="/" class="site-header__logo-image" style="display: block;z-index: 9;">
              <img
                class="lazypreload lazyloaded"
                src="{{ section.settings.logo_mobile | img_url: '500x' }}"
                alt=""
                style="max-width: {{ section.settings.width_lg_mb }}px!important;"
              >
            </a>
          {% else %}
            <a class="site-header__logo-link" href="/" itemprop="url">{{ shop.name }}</a>
          {% endif %}
        </div>

        <div id="mobile_search">
          {% comment %}
          {% include 'nov-formsearch-inline' %}
          {% endcomment %}
        </div>
        
        <div class="mobile-bag">
          <a href="#" class="nov-toggle-page" data-target="#mobile-blockcart" >
            <span id="_mobile_cart_count" class="cart-products-count"></span><span class="icon-cart"></span>
          </a>
        </div>
        <div class="d-flex justify-content-end mobile-megamenu-icon">
          <div id="show-megamenu" class="item-mobile-top">
              <svg class="icon-menu" viewBox="0 0 100 80" width="20" height="20" fill="black">
                  <rect width="100" height="20"></rect>
                  <rect y="30" width="100" height="20"></rect>
                  <rect y="60" width="100" height="20"></rect>
              </svg>
              <svg class="icon-close" width="15" height="13" viewBox="0 0 15 13" xmlns="http://www.w3.org/2000/svg"><g stroke="#000" fill="none" fill-rule="evenodd" stroke-linecap="square"><path d="M1 0l13 13M14 0L1 13"></path></g></svg>
          </div>
        </div>
        
      </div>
    </div>
    <div class="header-center d-none d-md-flex">
        {% comment %}

      <div class="row align-items-center justify-content-between sdsd">

          <div class="col-xl-6 d-flex align-items-center cbbc">

          <div class="vertical_dropdown d-xl-none">
            <i class="zmdi zmdi-sort-amount-desc"></i>
            <div class="csse">
              {% if section.settings.social %}{% include 'nov-social' %}{% endif %}
            </div>
          </div>
          
        </div>
        {% endcomment %}
        
      <div class="contentsticky_logo col-xl-3 col-lg-4 text-xl-left text-md-center">

          <h1 class="h2 site-header__logo m-0 text-left" itemscope itemtype="http://schema.org/Organization">
            {% if section.settings.logo %}
