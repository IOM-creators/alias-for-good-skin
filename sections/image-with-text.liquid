{% style %}
  #shopify-section-{{ section.id }}.section_img_text {
      {% if section.settings.background_color != blank %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
    }
    #shopify-section-{{ section.id }} .distance {
      padding-top: {{ section.settings.distance_top }};
      padding-bottom: {{ section.settings.distance_bottom }};
    }
    .tt1 {
      margin-bottom: 0 !important;
  }
    .section_img_text .title {
      max-width: -webkit-fill-available;
  }
    .section_img_text .col-lg-6 .respone_image {
      margin: auto auto 13px;
  }

  .texte-left {
  text-align: left;

  }
    .texte-right {
  text-align: right;

  }
    .texte-center {
  text-align: center;

  }
  .button_label2 {
      padding: 4px 15px;
      max-width: 70%;
      display: flex;
      justify-content: center;
      min-width: 230px;
          font-size: 1.5rem;;
  }
    .subtitleext {
      margin: 10px 0;
  }
    .section_img_text .title {
      margin-bottom: 3px;
  }

    .tt1 {
      margin-bottom: 0 !important;
      display: flex;

  }

    .item_text.col-xl-8.col-lg-8.col-md-8.tt1 {
      padding: 3% !important;
  }

    @media (max-width: 767px)
  {
    .subtitleext {
      margin: auto;
  }
    .cbcn {
      margin-top: 20px;
  }
    form.addtocart{
      display: flex;
      justify-content: center;
    }
  }

{% endstyle %}

<div class=" gallery-image-custom distance{% if section.settings.has_fullwidth == true %} full_width{% endif %}{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container_ct">
  {% endif %}
  <div class="block">
    <div class="row spacing-20">
      {% for block in section.blocks %}
        {% if block.type == 'block_text' %}
          <div
            class="item_text{% if block.settings.class_text != blank %} {{ block.settings.class_text }}{% endif %} {{ block.settings.width }} {{ block.settings.width_lg }} {{ block.settings.width_md }} tt1"
            style=" align-items: {{ block.settings.content-align }};"
          >
            <div class="block_title texte-{{ block.settings.text-align }}">
              {% if block.settings.title != blank %}
                <div
                  class="title"
                  style="{% if block.settings.color_title != blank %}color: {{ block.settings.color_title }};{% endif %}"
                >
                  {{ block.settings.title }}
                </div>
              {% endif %}
              {% if block.settings.subtitle != blank %}
                <div
                  class="subtitle"
                  style="{% if block.settings.color_sub != blank %}color: {{ block.settings.color_sub }};{% endif %}"
                >
                  {{ block.settings.subtitle }}
                </div>
              {% endif %}

              {% if block.settings.text != blank %}
                <div
                  class="text-content"
                  style="{% if block.settings.color_sub != blank %}color: {{ block.settings.color_sub }};{% endif %}"
                >
                  {{ block.settings.text }}
                </div>
              {% endif %}

              {% if block.settings.show_button %}
                <div
                  class="cbcn"
                  style="
                    display: flex;
                    justify-content: {{ block.settings.text-align }};
                  "
                >
                  <button class="button_label2" style="background: {{ block.settings.bg_title_link }}">
                    <a href="{{ block.settings.button_link }}" class="hover_x">
                      <span style="color: {{ block.settings.color_button }}">
                        {{- block.settings.button_label | escape -}}
                      </span>
                      <i class="zmdi zmdi-long-arrow-right" style="fill: {{ block.settings.color_button }}"></i>
                    </a>
                  </button>
                </div>
              {% endif %}
              {% if block.settings.product-select != '' and block.settings.product-select != blank %}
                <form method="post" action="/cart/add" class="addtocart">
                  <input type="hidden" name="id" value="{{ block.settings.product-select.variants.first.id }}" />
                  <input type="hidden" min="1" type="number" id="quantity" name="quantity" value="{{ block.settings.product-count }}"/>
                  <input type="submit" value="Add to Bag" class="btn button_label2" style="background: {{ block.settings.bg_title_link }}; color: {{ block.settings.color_button }}"/>
                </form>
              {% endif %}
            </div>
            {% if block.settings['show-icons'] %}
              {% include 'icons-with-text' %}
            {% endif %}
          </div>
        {% endif %}
        {% if block.type == 'block_image' %}
          {%- assign img_size = block.settings.img_size -%}
          <div class="item_image{% if block.settings.class_image != blank %} {{ block.settings.class_image }}{% endif %} {{ block.settings.width }} {{ block.settings.width_lg }} {{ block.settings.width_md }}">
            {% if block.settings.image != blank %}
              <div
                class="b_img hover-image respone_image"
                style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100}}%;"
              >
                {% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                <img
                  class="row__image lazyload"
                  src="{{ block.settings.image | img_url: img_size }}"
                  data-src="{{ img_url }}"
                  data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="auto"
                  height="auto"
                  loading="lazy"
                >
              </div>
            {% else %}
              <img src="https://via.placeholder.com/628x775?text=628x775" width="auto" height="auto" loading="lazy">
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>
