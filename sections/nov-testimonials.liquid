{%- assign bg_image = section.settings.background_image -%}
<div data-section-id="{{ section.id }}" class="distance {{ section.settings.class }}" data-section-type="nov-slick">
  {% if section.settings.full_width == false %}
    <div class="container_ct">
  {% endif %}
    <div class="block_title {{ section.settings.title_alignment }} mb-0">
      {% if section.settings.title != blank %}
        <div class="title-block title mb-0" style="{% if section.settings.color_title != blank %}color: {{ section.settings.color_title }};{% endif %}">{{ section.settings.title | nofilter }}</div>
      {% endif %}
    </div>
    <div class="testimonial_block testi">
      {% if section.blocks.size > 0 %}
        <div class="testimonials-slider{% if section.settings.spacing != blank %} spacing-{{ section.settings.spacing }}{% endif %} nov-slick-carousel"
          data-dots="{{ section.settings.show_dots }}"
          data-nav="{{ section.settings.show_nav }}"
          data-items="{{ section.settings.num_items }}"
          data-items_tablet="{{ section.settings.num_items }}"
          data-items_mobile="1"
          data-loop="false"
          data-fade="false">
          {% for block in section.blocks %}
            {% case block.settings.star %}
            {% when 1 %}
              {%- assign ns = '<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i>' -%}
            {% when 2 %}
              {%- assign ns = '<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i>' -%}
            {% when 3 %}
              {%- assign ns = '<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o"></i><i class="fa fa-star-o"></i>' -%}
            {% when 4 %}
              {%- assign ns = '<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star-o"></i>' -%}
            {% when 5 %}
              {%- assign ns = '<i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i><i class="fa fa-star" aria-hidden="true"></i>' -%}
            {% endcase %}
            <div class="testimonial-item item-{{ forloop.index }}">
              <div class="block_content row">
                <div class="content-info {% if section.settings.avatar %}col-md-7{% else %}col-md-12{% endif %}">
                  {% if section.settings.s_star == true %}
                    <div class="testimonial-rating mb-25">{{ ns }}</div>
                  {% endif %}
                  <div class="b_info d-flex wow fadeInUp animated">
                    {% if block.settings.des != blank %}
                      <div class="testimonial-item__text" style="{% if section.settings.color_text != blank %}color: {{ section.settings.color_text }};{% endif %}"><p>{{ block.settings.des }}</p></div>
                    {% endif %}
                  </div>
                  {% if block.settings.author != blank or block.settings.info_other != blank %}
                    <div class="testimonial-info wow fadeInUp animated" style="{% if section.settings.color_name != blank %}color: {{ section.settings.color_name }};{% endif %}"><span class="name">{{ block.settings.author | nofilter }}</span>&nbsp;<span class="info">{{ block.settings.info_other | nofilter }}</span></div>
                  {% endif %}
                </div>
                {% if section.settings.avatar %}
                  <div class="img_content col-md-5 text-center text-lg-right mt-md-40">
                    <img class="d-inline-block" src="{{ block.settings.avatar | img_url: '450x' }}" alt="." width="auto" height="auto" loading="lazy">
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      
      {% endif %}

      {% if section.blocks.size == 0 %}
        {% include 'no-blocks' %}
      {% endif %}
    </div>
    {% if section.settings.testi_link != blank %}
    <div class="testi-link">
      <a href="{{ section.settings.testi_link }}">
        {% if section.settings.testi_text != blank %}
          {{ section.settings.testi_text }}
        {% else %}
          Shop Now
        {% endif %}
      </a>
    </div>
    {% endif %}
  {% if section.settings.full_width == false %}
    </div>
  {% endif %}
</div>
{% schema %}
