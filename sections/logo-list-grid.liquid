<div class="logo-main container_ct" style="background:{{ section.settings.background_color }}; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  <div class="width-sec texte1-{{ section.settings.text-align }}">
    <h2 class="gbc title" style="color:{{ section.settings.heading_color }};">{{ section.settings.title | escape }}</h2>
    {% if section.settings.subtitle_text %}
      <h3 class="subtitle" style="color:{{ section.settings.subtitle_color }};">{{ section.settings.subtitle_text | escape }}</h3>
    {% endif %}

    
    <div class="logo-grid">
      {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
          <div class="logo-bar__item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}">
            {% endif %}
            {% if block.settings.image != blank %}
              {{ block.settings.image | img_url: '160x160', scale: 2 | img_tag: block.settings.image.alt }}
            {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
            {% if block.settings.image_title %}
              <h4>{{ block.settings.image_title | escape }}</h4>
            {% endif %}
            {% if block.settings.image_text %}
              <p>{{ block.settings.image_text | escape }}</p>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
    </div>
    {% if section.settings.text_paragraph %}
      <p class="text" style="font-size:{{ section.settings.text_size }}px; color:{{ section.settings.text_color }};">{{ section.settings.text_paragraph | escape }}</p>
    {% endif %}
    {% if section.settings.button_text %}
      <div class="button-wrap">
        <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_text }}</a>
      </div>
    {% endif %}
    
  </div>
</div>

{% schema %}
{
  "name": "Logo list slider",
  "class": "index-section",
  "max_blocks": 10,
  "presets": [
    {
      "name": "Logo grid",
      "category": "Slider"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Logo list slider"
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
      {
      "type": "range",
      "id": "logos_per_row_desktop",
      "label": "Logos per row (Desktop)",
      "default": 4,
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "range",
      "id": "logos_per_row_mobile",
      "label": "Logos per row (Mobile)",
      "default": 2,
      "min": 1,
      "max": 10,
      "step": 1
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "label": "Subtitle Size",
      "default": 18,
      "min": 12,
      "max": 36,
      "step": 2
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 60,
      "min": 0,
      "max": 200,
      "step": 5
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 60,
      "min": 0,
      "max": 200,
      "step": 5
    },
    {
      "type": "text",
      "id": "subtitle_text",
      "label": "Subtitle",
      "default": "Subtitle text"
    },
    {
      "type": "header",
      "content": "Text paragraph"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "text Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "text_paragraph",
      "label": "Text paragraph",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed consequat, purus non euismod bibendum, sapien est sagittis elit, a pulvinar turpis elit ac elit. Praesent ac orci nec mi hendrerit iaculis."
    },
    {
      "type": "select",
      "id": "text-align",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "text",
          "id": "image_title",
          "label": "Title",
          "default": "Title text"
        },
        {
          "type": "text",
          "id": "image_text",
          "label": "Subtitle",
          "default": "Subtitle text"
        }
      ]
    }
  ]
}

{% endschema %}


{% style %}

  .logo-main {
    padding: 0 5%;
}
.logo-bar__item {
  display: inline-block;
  text-align: center;
  width: 100%;
}

.logo-bar__item img {
  margin: auto;
  max-width: 160px;
}

.logo-bar__item a {
  display: block;
  margin-bottom: 20px;
}

.logo-main {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  background-color: {{ section.settings.background_color }};
}

.logo-main h2 {
  color: {{ section.settings.heading_color }};
}

.logo-main p {
  color: {{ section.settings.subtitle_color }};
}

  .logo-main .logo-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding-top: 10px;
    align-content: space-between;
}

.logo-main .text-paragraph {
  font-size: {{ section.settings.text_size }}px;
  color: {{ section.settings.text_color }};
}

.logo-main .button {
  background-color: {{ section.settings.button_bg_color }};
  color: {{ section.settings.button_text_color }};
  font-size: {{ section.settings.button_text_size }}px;
  border-radius: {{ section.settings.button_border_radius }}px;
  padding: {{ section.settings.button_padding }}px;
  border: none;
  cursor: pointer;
}
.texte1-left {
text-align: left;
  
}
  .texte1-right {
text-align: right;
  
}
  .texte1-center {
text-align: center;
  
}
@media screen and (min-width: 768px) {
  .logo-bar__item {
    width: 50%;
  }
}

@media screen and (min-width: 1024px) {
  .logo-bar__item {
    width: calc(100% / {{ section.settings.logos_per_row_desktop }});
  }
}

@media screen and (max-width: 767px) {
  .logo-bar__item {
    width: calc(100% / {{ section.settings.logos_per_row_mobile }});
  }
}

  .logo-bar__item img {
    margin-bottom: 10px;
}


{% endstyle %}

