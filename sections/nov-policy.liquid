{%- assign bg_image = section.settings.background_image -%}
{% if section.settings.background_color != blank or bg_image.src != blank %}
  <style>
    #shopify-section-{{ section.id }}.section-policy {
      {% if section.settings.background_color != blank %}
        background-color: {{ section.settings.background_color }};
      {% endif %}
      {% if bg_image.src != blank %}
        background-image: url("{{ bg_image | img_url: '1920x' }}");
        background-repeat: no-repeat;
      {% endif %}
    }
  </style>
{% endif %}
<div id="section-policy-{{ section.id }}" class="distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container_ct">
  {% endif %}
    {% if section.blocks.size > 0 %}
      <div class="nov-policy">
        <div class="row">
          {% for block in section.blocks %}
            <div class="nov-policy-item text-center {% if block.settings.class != blank %} {{ block.settings.class }} {% endif %}{{ section.settings.width }} {{ section.settings.width_tablet }} {{ section.settings.width_sm_mobile }} {{ section.settings.width_xs_mobile }}">
              <div class="policy-icon">
                {% if section.settings.enable_image %}
                  {% if block.settings.policy_icon != blank %}
                    <img class="lazyload" data-src="{{ block.settings.policy_icon | img_url: '120x' }}" alt="">
                  {% else %}
                    <img src="https://via.placeholder.com/100x100">
                  {% endif %}
                {% endif %}
              </div>
              <div class="policy-ct">
                <div class="title-policy" style="{% if block.settings.color_title != blank %}color: {{ block.settings.color_title }};{% endif %}{% if block.settings.size_title != blank %}font-size: {{ block.settings.size_title }}{% endif %}">{{ block.settings.title_policy }}</div>
                <div class="sub-policy" style="{% if block.settings.color_sub != blank %}color: {{ block.settings.color_sub }};{% endif %}{% if block.settings.size_sub != blank %}font-size: {{ block.settings.size_sub }}{% endif %}">{{ block.settings.sub_policy }}</div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>
