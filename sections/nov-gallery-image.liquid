<div class="distance{% if section.settings.class_section != blank %} {{ section.settings.class_section }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
  <div class="container">
  {% endif %}
    {% if section.settings.title != blank %}
      <div class="title_block text-uppercase {{ section.settings.title_alignment }}" style="{% if block.settings.color_title != blank %}color: {{ block.settings.color_title }};{% endif %}{% if block.settings.size_title != blank %}font-size: {{ block.settings.size_title }};{% endif %}">{{ section.settings.title }}</div>
    {% endif %}
    <div class="row spacing-{{ section.settings.spacing }}">
      {% case section.blocks.size %}
        {% when 1 %}
          {%- assign column_size = 'col-lg-12 col-md-12' -%}
        {% when 2 %}
          {%- assign column_size = 'col-lg-6 col-md-6' -%}
        {% when 3 %}
          {%- assign column_size = 'col-lg-4 col-md-4' -%}
        {% when 4 %}
          {%- assign column_size = 'col-lg-3 col-md-4' -%}
        {% when 5 %}
          {%- assign column_size = 'col-lg-cus-5 col-md-cus-5' -%}
        {% else %}
          {%- assign column_size = 'col-lg-2 col-md-4' -%}
      {% endcase %}

      {% for block in section.blocks %}
        <div class="{{ column_size }} gallery-image_column{% if block.settings.class != blank %} {{ block.settings.class }}{% endif %}">
          <div class="gallery-image__item hover-image">
            {% if block.settings.image != blank %}
              <div class="hover-image respone_image" style="padding-top:{{ 1 | divided_by: block.settings.image.aspect_ratio | times: 100}}%;">
                {% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                <img class="row__image lazyload"
                  src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 18 10'%3E%3C/svg%3E"
                  data-src="{{ img_url }}"
                  data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                  data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ block.settings.image.alt | escape }}">
              </div>
            {% else %}
              <img src="https://via.placeholder.com/640x360">
            {% endif %}

            {% if block.settings.cta_label != blank %}
              <div class="gallery-image__caption">
                <a href="{{ block.settings.link }}" class="hover_x" style="{% if block.settings.color_link != blank %}color: {{ block.settings.color_link }};{% endif %}{% if block.settings.size_link != blank %}font-size: {{ block.settings.size_link }};background: {{ block.settings.background_button }};{% endif %}">
                  <span>{{ block.settings.cta_label | escape }}</span>
                  <i class="zmdi zmdi-long-arrow-right"></i>
                </a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  {% if section.settings.has_fullwidth == false %}
  </div>
  {% endif %}
</div>
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

{% schema %}
  {
    "name": "Vinova Gallery Image",
    "class": "index-section section-gallery-image",
    "max_blocks": 6,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Vinova Gallery Image"
      },
      {
        "type": "text",
        "id": "size_title",
        "label": "Size Title",
        "default": "14px"
      },
      {
        "type": "color",
        "id": "color_title",
        "label": "Color Title",
        "default": "#222"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Heading alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "spacing",
        "label": "Spacing Items",
        "default": "0",
        "options": [
          {
            "label": "0px",
            "value": "0"
          },
          {
            "label": "5px",
            "value": "5"
          },
          {
            "label": "10px",
            "value": "10"
          },
          {
            "label": "15px",
            "value": "15"
          },
          {
            "label": "20px",
            "value": "20"
          },
          {
            "label": "25px",
            "value": "25"
          },
          {
            "label": "30px",
            "value": "30"
          },
          {
            "label": "40px",
            "value": "40"
          },
          {
            "label": "50px",
            "value": "50"
          },
          {
            "label": "60px",
            "value": "60"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full Width",
        "default":   false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "text",
        "id": "class_section",
        "label": "Class"
      },
      {
        "type": "text",
        "id": "distance_top",
        "label": "Top Distance Section",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "distance_bottom",
        "label": "Bottom Distance Section",
        "default": "30px"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "cta_label",
            "label": "Caption"
          },
          {
            "type": "text",
            "id": "size_link",
            "label": "Size Link",
            "default": "12px"
          },
          {
            "type": "color",
            "id": "color_link",
            "label": "Color Link",
            "default": "#000"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link",
            "info": "Optional"
          },
          {
            "type": "color",
            "id": "background_button",
            "label": "Background Button",
            "default": "#fff"
          },
          {
            "type": "text",
            "id": "class",
            "label": "Class"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Image Gallery",
        "category": "Image",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "image"
          }
        ]
      }
    ]
  }
{% endschema %}

<style>
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }};
    padding-bottom: {{ section.settings.distance_bottom }};
  }
</style>
