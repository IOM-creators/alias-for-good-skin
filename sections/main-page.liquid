{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top_mob }}px;
    padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | img_url: 'master' }}');
    {% endif %}
  }

  .section-{{ section.id }}  * {
    color: {{ section.settings.text_color }}
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }kj
{%- endstyle -%}


<div class="page-header {{ section.settings.text_align }} section-{{ section.id }}">
  <div class="page-width  page-width--narrow">
    <h1 class="main-page-title page-title {{ section.settings.heading_size }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ page.title | escape }}
    </h1>
    {% if page.content != blank %}
      <div class="page-desc rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ page.content }}
      </div>
    {% endif %}
  </div>
</div>


{% schema %}
  {
    "name": "t:sections.main-page.name",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 300,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 300,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_top_mob",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Top padding for mobile",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom_mob",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Bottom padding for mobile",
        "default": 36
      }, {
        "type": "header",
        "content": "Text color"
      }, {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#121212"
      }, {
        "type": "header",
        "content": "Text sizing"
      }, {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          }, {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          }, {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          }, {
            "value": "hxl",
            "label": "t:sections.all.heading_size.options__4.label"
          }
        ],
        "default": "h0",
        "label": "t:sections.all.heading_size.label"
      }, {
        "type": "header",
        "content": "Text align"
      }, {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left"
      }, {
        "type": "header",
        "content": "Block background image"
      }, {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Block background image"
      }
    ]
  }
{% endschema %}
