        ]
      },
      {
        "type": "block_right",
        "name": "Block Right",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
            "id": "class_text",
            "label": "Class Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Images With Text",
        "category": "Image"
      }
    ]
  }
{% endschema %}