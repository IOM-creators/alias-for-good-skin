      }
    ],
    "blocks": [
      {
        "type": "block_left",
        "name": "Block Left",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "text",
