<style>
  #shopify-section-{{ section.id }}.section_img_text {
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  }
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }};
    padding-bottom: {{ section.settings.distance_bottom }};
  }
</style>
<div class="test gallery-image-custom distance{% if section.settings.has_fullwidth == true %} full_width{% endif %}{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container_ct">
  {% endif %}
    <div class="block_title {{ section.settings.title_alignment }}">
      {% if section.settings.subheading != blank %}
        <div class="sub-title">{{ section.settings.subheading }}</div>
      {% endif %}
      {% if section.settings.title != blank %}
        <div class="title_block wow fadeInUp animated">{{ section.settings.title }}</div>
      {% endif %}
      {% if section.settings.desc != blank %}
        <div class="desc_title wow fadeInUp animated">{{ section.settings.desc }}</div>
      {% endif %}
    </div>
    <div class="block">
      <div class="row align-items-center">  
        <div class="col-lg-3 col-sm-6 col-xs-12 wow fadeInLeft animated">
          {% for block in section.blocks %}
            {% if block.type == 'block_left' %}
              <div class="item_text d-flex align-items-center mb-xs-30">
                {% if  block.settings.icon != blank %}
                  <div class="icon"><img src="{{ block.settings.icon | img_url: '30x' }}"></div>
                {% endif %}
                {% if block.settings.title != blank %}
                  <div class="text-content">{{ block.settings.title }}</div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>{% if section.settings.image != blank %}
        <div class="block_img col-lg-6 col-md-12 order-2 order-lg-0">
          
            <div class="respone_image" style="padding-top:{{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100}}%;">
              {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
              <img class="gallery_image lazyload"
                src="{{ section.settings.image | img_url: '600x' }}"
                data-src="{{ img_url }}"
                data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                data-sizes="auto"
                alt="{{ section.settings.image.alt | escape }}">
            </div>
          
        </div>{% endif %}
        <div class="col-lg-3 col-sm-6 col-xs-12 wow fadeInRight animated">
          {% for block in section.blocks %}
            {% if block.type == 'block_right' %}
              <div class="item_text d-flex align-items-center mb-xs-30">
                {% if  block.settings.icon != blank %}
                  <div class="icon"><img src="{{ block.settings.icon | img_url: '30x' }}"></div>
                {% endif %}
                {% if block.settings.title != blank %}
                  <div class="text-content">{{ block.settings.title }}</div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>
{% schema %}
