<style>
  #shopify-section-{{ section.id }}.section_banner {
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  }
</style>
<div class="gallery-image-custom distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %} wow fadeInUp animated">
  {% if section.settings.has_fullwidth == false %}
    <div class="container_ct">
  {% endif %}
    <div class="block-image">
      <div class="row spacing-gr">
        {% for block in section.blocks %}
          {%- assign img_size = block.settings.img_size -%}
          <div class="item{% if block.settings.class_text != blank %} {{ block.settings.class_text }}{% endif %} {{ block.settings.width }} {{ block.settings.width_lg }} {{ block.settings.width_md }}{% if block.settings.img_p == 'right' %} d-flex flex-column-reverse{% endif %}">
            {% if block.settings.image != blank %}
              {% if block.settings.img_p == 'right' %}
                <div class="rtl-right">
                  <div class="d-inline-block">
                    <div class="b_img hover-image d-inline-block">
                      <img class="lazyload" data-src="{{ block.settings.image | img_url: img_size }}" alt="">
                      {% if block.settings.title != blank %}
                      {% endif %}
                    </div>
                    <div class="title title2 d-inline-block" style="{% if block.settings.color_title2 != blank %}color: {{ block.settings.color_title2 }};{% endif %}{% if block.settings.color_title2 != blank %}font-size: {{ block.settings.size_title2 }};{% endif %}">{{ block.settings.title2 }}</div>
                  </div>
                </div>
              {% else %}
                <div class="b_img hover-image">
                  <img class="lazyload" data-src="{{ block.settings.image | img_url: img_size }}" alt="">
                </div>
              {% endif %}
            {% else %}
              <img src="https://via.placeholder.com/628x775?text=628x775">
            {% endif %}
            <div class="block_content {% if block.settings.img_p == 'top' %} mt-25{% endif %} mt-md-30">
              {% if block.settings.subtitle != blank %}
                <div class="subtitle" style="{% if block.settings.color_sub != blank %}color: {{ block.settings.color_sub }};{% endif %}{% if block.settings.color_sub != blank %}font-size: {{ block.settings.size_sub }};{% endif %}">{{ block.settings.subtitle }}</div>
              {% endif %}
              {% if block.settings.title != blank %}
                <div class="title" style="{% if block.settings.color_title != blank %}color: {{ block.settings.color_title }};{% endif %}{% if block.settings.color_title != blank %}font-size: {{ block.settings.size_title }};{% endif %}">{{ block.settings.title }}</div>
              {% endif %}
              {% if block.settings.des != blank %}
                <div class="des" style="{% if block.settings.color_des != blank %}color: {{ block.settings.color_des }};{% endif %}{% if block.settings.color_des != blank %}font-size: {{ block.settings.size_des }};{% endif %}">{{ block.settings.des }}</div>
              {% endif %}
              {% if block.settings.button_label != blank and block.settings.button_link != blank %}
                <div class="d-flex justify-content-start">
                  <a href="{{ block.settings.button_link }}" class="hover_x button_label d-flex align-items-center justify-content-center" {% if block.settings.bg_button != blank %}style="background: {{ block.settings.bg_button }};"{% endif %}>
                    <span>{{ block.settings.button_label | escape }}</span>
                    <i class="zmdi zmdi-long-arrow-right"></i>
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>
