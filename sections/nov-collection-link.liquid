<div class="page-width distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if section.settings.has_fullwidth == false %}
  <div class="container_ct">
  {% endif %}

    <div class="block_title {{ section.settings.title_alignment }} mb-65">
      {% if section.settings.subheading != blank %}
        <div class="sub-title">{{ section.settings.subheading }}</div>
      {% endif %}
      {% if section.settings.title != blank %}
        <div class="title_block">{{ section.settings.title }}</div>
      {% endif %}
      {% if section.settings.desc != blank %}
        <div class="desc_title">{{ section.settings.desc }}</div>
      {% endif %}
    </div>

    <div {% if section.settings.enableslider %}class="row nov-slick-carousel"
      data-autoplay="false" 
      data-autoplayTimeout="6000" 
      data-loop="false"
      data-dots="false"
      data-nav="false" 
      data-row="1"
      data-items_xl="{{ section.settings.grid_number_xl }}"
      data-items="{{ section.settings.grid_number }}" 
      data-items_lg_tablet="{{ section.settings.grid_number_lg_tablet }}" 
      data-items_tablet="{{ section.settings.items_tablet }}" 
      data-items_mobile="{{ section.settings.items_mobile }}" {% else %} class="grid-system" {% endif %}>
      {% for block in section.blocks %}
        <div class="item col">
          <div class="block_content text-center">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}">
          {% endif %}
          {% if block.settings.image != blank %}
            <span class="b_img"><span><img src="{{ block.settings.image | img_url: '260x'}}" alt="." width="auto" height="auto" loading="lazy"></span></span>
          {% endif %}
          {% if block.settings.text != blank %}
            <span class="name_link d-block">{{ block.settings.text }}</span>
          {% endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
    {% endif %}

  {% if section.settings.has_fullwidth == false %}
  </div>
  {% endif %}

</div>
{% style %}
  
  {% if section.settings.enableslider == false %}

/* For screens larger than 768px (tablets and desktops) */
@media only screen and (min-width: 768px) {
  .grid-system {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .item {
    width: 23%;
    margin-bottom: 30px;
  }
}

/* For screens smaller than 768px (mobile devices) */
@media only screen and (max-width: 767px) {
  .grid-system {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }
  .item {
    width: 48%;
    margin-bottom: 30px;
  }
 .grid-system .col {
    -ms-flex-preferred-size: 0;
    flex-basis: unset;
    -ms-flex-positive: 1;
    flex-grow: 1;
    max-width: 100%;
}
}


    {% endif %}}
  {% endstyle %}

    
{% schema %}
  {
    "name": "Vinova Link List",
    "class": "index-section section-collection-link wow fadeInUp animated",
    "max_blocks": 12,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Vinova Collection Link"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub Heading",
        "default": "Subtitle from happy customers"
      },
      {
        "type": "richtext",
        "id": "desc",
        "label": "Description"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Title alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "checkbox",
        "id": "enableslider",
        "label": "make it slider",
        "default":   false
      },
      {
        "type": "range",
        "id": "grid_number_xl",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Products per row extra desktop",
        "default": 8
      },
      {
        "type": "range",
        "id": "grid_number",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Products per row large",
        "default": 8
      },
      {
        "type": "range",
        "id": "grid_number_lg_tablet",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Products per row (Desktop)",
        "default": 6
      },
      {
        "type": "range",
        "id": "items_tablet",
        "min": 1,
        "max": 8,
        "step": 1,
        "label": "Items Tablet",
        "default": 3
      },
      {
        "type": "range",
        "id": "items_mobile",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Items Mobile",
        "default": 2
      },
      {
        "type":  "header",
        "content": "Design Option"
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full Width",
        "default":   false
      },
      {
        "type": "color",
        "id": "color_link",
        "label": "Link Text Colors",
        "default": "#666666"
      },
      {
        "type": "image_picker",
        "id": "bg_item",
        "label": "Background Image Item"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Colors",
        "default": "#ffffff"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "distance_top",
        "label": "Top Distance Section",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "distance_bottom",
        "label": "Bottom Distance Section",
        "default": "30px"
      }
    ],
    "blocks": [
      {
        "type": "featured_collection",
        "name": "Link",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Name Link"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vinova Collection Link",
        "category": "Collection",
        "blocks": [
          {
            "type": "featured_collection"
          },
          {
            "type": "featured_collection"
          },
          {
            "type": "featured_collection"
          }
        ]
      }
    ]
  }
{% endschema %}
<style>
  {%- assign bg_image = section.settings.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }};
    padding-bottom: {{ section.settings.distance_bottom }};
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x' }}");
      background-repeat: no-repeat;
      background-position: center top;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .name_link {
    color: {{ section.settings.color_link }};
  }
  #shopify-section-{{ section.id }} .b_img:before {
    background-image: url("{{ section.settings.bg_item | img_url: '285x' }}");
  }
</style>
