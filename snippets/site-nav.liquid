<ul class="site-nav list--inline {{ nav_alignment }}" id="SiteNav">
  {% for link in linklists[section.settings.main_linklist].links %}
    {% assign isMega = false %}
    {% assign isIcon = false %}
    {% assign menu_id = forloop.index %}
    {%- assign three_level_nav = false -%}
    {%- assign child_list_handle = link.title | handleize -%}

    {% if linklists[child_list_handle].links != blank %}
      {% for childlink in linklists[child_list_handle].links %}
        {% assign grand_child_list_handle = childlink.title | handleize %}
        {% if linklists[grand_child_list_handle].links != blank %}
          {%- assign three_level_nav = true -%}
        {% endif %}
      {% endfor %}
    {% endif %}

    {% if section.settings.novmenu_enable %}
      {% for block in section.blocks %}
        {% assign menuItem = link.title %}
        {% if block.settings.novmenu_item contains menuItem %}
          {% include 'nov-megamenu', menu_id: menu_id  %}
          {% assign isMega = true %}
          {% break %}
        {% endif %}
      {% endfor %}
    {% endif %}

    {% if section.settings.show_icon %}
      {% for block in section.blocks %}
        {% assign menuItem = link.title %}
        {% if block.settings.name_item contains menuItem %}
          {% include 'nov-iconmenu' %}
          {% assign isIcon = true %}
          {% break %}
        {% endif %}
      {% endfor %}
    {% endif %}

    {% if isMega == false and isIcon == false %}

      {% if linklists[child_list_handle].links != blank %}
        <li class="site-nav--has-dropdown menu_mb" aria-controls="SiteNavLabel-{{ child_list_handle }}">
          <a class="d-flex" href="{{ link.url }}" class="site-nav__link site-nav__link--main" style="{% if section.settings.color_menu != blank %}color: {{ section.settings.color_menu }};{% endif %}{% if section.settings.size_menu != blank %}font-size: {{ section.settings.size_menu }};{% endif %}">
            <div class="group_title d-flex align-items-center">{{ link.title }}</div>
            <span class="d-xl-none d-md-block d-sm-none d-xs-none show_mor"><i class="zmdi zmdi-caret-right"></i></span>
          </a>
          <div class="dropdown_menu">
            <div class="site-nav__dropdown" id="SiteNavLabel-{{ child_list_handle }}" aria-expanded="false" role="main">
              {% if three_level_nav %}
                {% if linklists[child_list_handle].links != blank %}
                  <ul>
                    {% for childlink in linklists[child_list_handle].links %}
                      {% assign grand_child_list_handle = childlink.title | handle %}
                      
                      <li class="site-nav__childlist-item much_menu {% if linklists[grand_child_list_handle].links != blank %}menu_mega{% endif %}">
                        <a href="{{ childlink.url }}" class="d-flex align-items-center site-nav__link site-nav__child-link site-nav__child-link--parent">
                          <div class="group_title d-flex align-items-center">{{ childlink.title | escape }}</div>
                          <span class="show_sub ml-auto"><i class="zmdi zmdi-caret-right"></i></span>
                        </a>
                        {% if linklists[grand_child_list_handle].links != blank %}
                          <div class="site-nav__dropdown-children">
                            <ul>
                              {% for grandchildlink in linklists[grand_child_list_handle].links %}
                                <li>
                                  <a href="{{ grandchildlink.url }}" class="site-nav__link site-nav__child-link">{{ grandchildlink.title | escape }}</a>
                                </li>
                              {% endfor %}
                            </ul>
                          </div>
                        {% endif %}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              {% else %}
                <ul>
                  {% for childlink in linklists[child_list_handle].links %}
                    <li {% if childlink.active %}class="site-nav--active"{% endif %}>
                      <a href="{{ childlink.url }}" class="site-nav__link site-nav__child-link{% if forloop.last %} site-nav__link--last{% endif %}">{{ childlink.title | escape }}</a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          </div>
        </li>
      {% else %}
        <li {% if link.active %}class="site-nav--active"{% endif %}>
          <a href="{{ link.url }}" class="site-nav__link site-nav__link--main" style="{% if section.settings.color_menu != blank %}color: {{ section.settings.color_menu }};{% endif %}{% if section.settings.size_menu != blank %}font-size: {{ section.settings.size_menu }};{% endif %}">
            {{ link.title }}
          </a>
        </li>
      {% endif %}

    {% endif %}
  {% endfor %}
</ul>
